# # 数据库配置
# DATABASE_URL=sqlite:///./project_management.db
# # 或者使用 PostgreSQL
# # DATABASE_URL=postgresql://username:password@localhost/project_management
# # 或者使用 MySQL
# # DATABASE_URL=mysql+pymysql://username:password@localhost/project_management

# # JWT 密钥配置
# SECRET_KEY=your-secret-key-here-please-change-in-production
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# # 应用配置
# APP_NAME=项目管理系统
# APP_VERSION=1.0.0
# DEBUG=True

# # 日志配置
# LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
# MACHINE_ID=1    # 雪花算法机器ID (0-1023)

# # CORS 配置
# ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# # 文件上传配置
# UPLOAD_DIR=uploads
# MAX_FILE_SIZE=10485760  # 10MB

# # 调试模式鉴权跳过 - 设置为true时将跳过所有接口鉴权检查 (仅开发环境使用)
# DEBUG_SKIP_AUTH=True