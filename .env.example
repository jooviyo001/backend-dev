# 项目管理系统 - 环境变量配置示例
# =============================================================================
# 复制此文件为 .env 并根据实际环境修改配置值

# =============================================================================
# 应用基础配置
# =============================================================================
APP_NAME="项目管理系统"
APP_DESCRIPTION="一个功能完整的项目管理系统API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, production, testing
DEBUG=true  # 开发环境下为true，生产环境下为false
API_V1_STR="/api/v1"

# =============================================================================
# 服务器配置
# =============================================================================
SERVER_HOST="127.0.0.1"
SERVER_PORT=8000
SERVER_WORKERS=1
SERVE_STATIC_FILES=true  # 服务静态文件开发环境下为true，生产环境下为false
SERVE_UPLOAD_FILES=true  # 服务上传文件开发环境下为true，生产环境下为false
SERVE_EXPORT_FILES=true  # 服务导出文件开发环境下为true，生产环境下为false
SERVE_DOCS=true  # 服务文档开发环境下为true，生产环境下为false
SERVE_SWAGGER=true  # 服务Swagger文档开发环境下为true，生产环境下为false
SERVE_REDOC=true  # 服务ReDoc文档开发环境下为true，生产环境下为false
SERVE_FASTAPI=true  # 服务FastAPI开发环境下为true，生产环境下为false
SERVE_DEBUG=true  # 服务调试开发环境下为true，生产环境下为false
SERVE_DEBUG_TOOLBAR=true  # 服务调试工具栏开发环境下为true，生产环境下为false
SERVE_DEBUG_TOOLBAR_CONFIG={"enabled": true, "intercept_redirects": false}  # 服务调试工具栏配置，开发环境下为true，生产环境下为false
DEBUG_SKIP_AUTH=true  # 调试模式鉴权跳过 - 设置为true时将跳过所有接口鉴权检查
DEBUG_SKIP_CORS=true  # 调试模式CORS跳过 - 设置为true时将跳过所有接口CORS检查


# =============================================================================
# 数据库配置
# =============================================================================
# PostgreSQL (推荐生产环境)
# DATABASE_URL="postgresql://username:password@localhost:5432/project_management"

# MySQL (备选)
# DATABASE_URL="mysql+pymysql://username:password@localhost:3306/project_management"

# SQLite (开发环境)
DATABASE_URL="sqlite:///./project_management.db"

# 数据库连接池配置
DATABASE_POOL_SIZE=10  # 数据库连接池大小
DATABASE_MAX_OVERFLOW=10  # 数据库连接池最大溢出大小
DATABASE_POOL_TIMEOUT=30  # 数据库连接池超时时间
DATABASE_POOL_RECYCLE=3600  # 数据库连接池回收时间  单位：秒


# 数据库初始化
INIT_DB_ON_STARTUP=true  # 数据库初始化 - 设置为true时将在启动时初始化数据库
CREATE_ADMIN_USER=true  # 创建管理员用户 - 设置为true时将在启动时创建管理员用户  用户名：admin  密码：123456  邮箱：admin@example.com
CREATE_SAMPLE_DATA=false  # 创建示例数据 - 设置为true时将在启动时创建示例数据


# =============================================================================
# Redis配置
# =============================================================================
REDIS_HOST="localhost"  # Redis主机地址
REDIS_PORT=6379  # Redis端口号
REDIS_DB=0  # Redis数据库索引
REDIS_PASSWORD=""  # Redis密码  默认为空
REDIS_SOCKET_TIMEOUT=30  # Redis socket超时时间  单位：秒
REDIS_SOCKET_CONNECT_TIMEOUT=30  # Redis socket连接超时时间  单位：秒
REDIS_SOCKET_KEEPALIVE=30  # Redis socket保持连接时间  单位：秒
REDIS_SOCKET_KEEPALIVE_DELAY=30  # Redis socket保持连接延迟时间  单位：秒
REDIS_SOCKET_KEEPALIVE_INTERVAL=30  # Redis socket保持连接间隔时间  单位：秒
REDIS_SOCKET_KEEPALIVE_MAX_FAILURES=3  # Redis socket保持连接最大失败次数   单位：次


# =============================================================================
# JWT配置
# =============================================================================
SECRET_KEY="your-secret-key-change-in-production"  # JWT密钥  建议在生产环境中使用随机字符串  长度建议为32位    建议使用32位随机字符串
ALGORITHM="HS256"  # JWT算法  建议使用HS256算法
ACCESS_TOKEN_EXPIRE_MINUTES=30  # 访问令牌过期时间  单位：分钟
REFRESH_TOKEN_EXPIRE_DAYS=7  # 刷新令牌过期时间  单位：天
ACCESS_TOKEN_EXPIRE_SECONDS=30  # 访问令牌过期时间  单位：秒
REFRESH_TOKEN_EXPIRE_SECONDS=30  # 刷新令牌过期时间  单位：秒


# =============================================================================
# 文件上传配置
# =============================================================================
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,zip,rar"
EXPORT_DIR="./exports"

# =============================================================================
# 分页配置
# =============================================================================
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# =============================================================================
# 邮件配置 (可选)
# =============================================================================
# SMTP_TLS=true
# SMTP_PORT=587
# SMTP_HOST="smtp.example.com"
# SMTP_USER="your_email@example.com"
# SMTP_PASSWORD="your_email_password"
