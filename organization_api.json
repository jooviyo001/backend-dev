{
  "organizationManagement": {
    "description": "组织管理系统接口文档",
    "version": "1.0.0",
    "pages": {
      "organizationDashboard": {
        "name": "组织管理主页",
        "path": "/organization",
        "components": [
          "WelcomeCard",
          "StatsGrid",
          "OrganizationSearch",
          "OrganizationTree",
          "OrganizationList",
          "OrganizationForm"
        ],
        "fields": {
          "statistics": {
            "totalOrganizations": "总组织数量",
            "activeOrganizations": "启用组织数量",
            "inactiveOrganizations": "禁用组织数量",
            "rootOrganizations": "根组织数量"
          }
        }
      },
      "organizationForm": {
        "name": "组织表单页面",
        "type": "dialog",
        "steps": [
          {
            "step": 1,
            "name": "基本信息",
            "fields": {
              "name": {
                "type": "string",
                "required": true,
                "label": "组织名称",
                "validation": {
                  "minLength": 2,
                  "maxLength": 50,
                  "unique": "同级组织中唯一"
                }
              },
              "code": {
                "type": "string",
                "required": true,
                "label": "组织编码",
                "validation": {
                  "minLength": 2,
                  "maxLength": 20,
                  "pattern": "^[A-Za-z0-9_-]+$",
                  "unique": "全局唯一"
                }
              },
              "description": {
                "type": "textarea",
                "required": false,
                "label": "组织描述",
                "maxLength": 200
              }
            }
          },
          {
            "step": 2,
            "name": "组织配置",
            "fields": {
              "type": {
                "type": "select",
                "required": true,
                "label": "组织类型",
                "options": [
                  {"value": "company", "label": "公司"},
                  {"value": "department", "label": "部门"},
                  {"value": "team", "label": "团队"},
                  {"value": "group", "label": "小组"}
                ]
              },
              "parentId": {
                "type": "tree-select",
                "required": false,
                "label": "上级组织",
                "dataSource": "organizations"
              },
              "sort": {
                "type": "number",
                "required": true,
                "label": "排序权重",
                "min": 0,
                "max": 999,
                "default": 0
              },
              "status": {
                "type": "radio",
                "required": true,
                "label": "组织状态",
                "options": [
                  {"value": "active", "label": "启用"},
                  {"value": "inactive", "label": "禁用"}
                ],
                "default": "active"
              }
            }
          },
          {
            "step": 3,
            "name": "管理设置",
            "fields": {
              "managerId": {
                "type": "select",
                "required": false,
                "label": "组织负责人",
                "dataSource": "managers",
                "filterable": true
              }
            }
          }
        ]
      },
      "organizationList": {
        "name": "组织列表页面",
        "type": "table",
        "fields": {
          "name": {
            "type": "string",
            "label": "组织名称",
            "sortable": true,
            "searchable": true
          },
          "code": {
            "type": "string",
            "label": "组织编码",
            "sortable": true
          },
          "type": {
            "type": "tag",
            "label": "组织类型",
            "filterable": true
          },
          "parentName": {
            "type": "string",
            "label": "上级组织"
          },
          "managerName": {
            "type": "string",
            "label": "负责人"
          },
          "memberCount": {
            "type": "number",
            "label": "成员数量",
            "align": "center"
          },
          "status": {
            "type": "tag",
            "label": "状态",
            "filterable": true
          },
          "sort": {
            "type": "number",
            "label": "排序",
            "sortable": true
          },
          "createdAt": {
            "type": "datetime",
            "label": "创建时间",
            "sortable": true
          }
        },
        "actions": [
          "view",
          "edit",
          "addChild",
          "delete"
        ],
        "batchActions": [
          "enable",
          "disable",
          "delete"
        ]
      },
      "organizationTree": {
        "name": "组织树页面",
        "type": "tree",
        "fields": {
          "name": "组织名称",
          "type": "组织类型",
          "memberCount": "成员数量",
          "status": "状态"
        },
        "treeProps": {
          "children": "children",
          "label": "name"
        }
      },
      "organizationSearch": {
        "name": "组织搜索页面",
        "type": "search",
        "fields": {
          "keyword": {
            "type": "string",
            "label": "关键词",
            "placeholder": "搜索组织名称或编码"
          },
          "type": {
            "type": "select",
            "label": "组织类型",
            "options": [
              {"value": "company", "label": "公司"},
              {"value": "department", "label": "部门"},
              {"value": "team", "label": "团队"},
              {"value": "group", "label": "小组"}
            ]
          },
          "status": {
            "type": "select",
            "label": "状态",
            "options": [
              {"value": "active", "label": "启用"},
              {"value": "inactive", "label": "禁用"}
            ]
          },
          "parentId": {
            "type": "tree-select",
            "label": "上级组织"
          }
        }
      }
    },
    "apis": {
      "getOrganizations": {
        "method": "GET",
        "url": "/organizations/list",
        "description": "获取组织列表",
        "requestParams": {
          "keyword": "搜索关键词",
          "type": "组织类型",
          "status": "组织状态",
          "parentId": "父组织ID",
          "managerId": "负责人ID",
          "level": "组织层级"
        },
        "responseFields": {
          "id": "组织ID",
          "name": "组织名称",
          "code": "组织编码",
          "type": "组织类型",
          "status": "组织状态",
          "description": "组织描述",
          "parentId": "父组织ID",
          "parentName": "父组织名称",
          "level": "组织层级",
          "path": "组织路径",
          "managerId": "负责人ID",
          "managerName": "负责人姓名",
          "memberCount": "成员数量",
          "childCount": "子组织数量",
          "sort": "排序值",
          "address": "地址",
          "phone": "电话",
          "email": "邮箱",
          "website": "网站",
          "createdAt": "创建时间",
          "updatedAt": "更新时间"
        }
      },
      "getOrganizationsPagination": {
        "method": "GET",
        "url": "/organizations/page",
        "description": "获取组织分页数据",
        "requestParams": {
          "page": "页码",
          "pageSize": "每页数量",
          "keyword": "搜索关键词",
          "type": "组织类型",
          "status": "组织状态",
          "parentId": "父组织ID"
        },
        "responseFields": {
          "items": "组织列表",
          "total": "总数量",
          "page": "当前页码",
          "pageSize": "每页数量",
          "totalPages": "总页数"
        }
      },
      "getOrganizationTree": {
        "method": "GET",
        "url": "/organizations/tree",
        "description": "获取组织树",
        "requestParams": {
          "rootId": "根组织ID",
          "maxLevel": "最大层级",
          "includeInactive": "是否包含禁用组织"
        },
        "responseFields": {
          "id": "组织ID",
          "name": "组织名称",
          "code": "组织编码",
          "type": "组织类型",
          "status": "组织状态",
          "parentId": "父组织ID",
          "level": "组织层级",
          "memberCount": "成员数量",
          "children": "子组织列表"
        }
      },
      "getOrganizationById": {
        "method": "GET",
        "url": "/organizations/{id}",
        "description": "获取组织详情",
        "pathParams": {
          "id": "组织ID"
        },
        "responseFields": "同getOrganizations的responseFields"
      },
      "createOrganization": {
        "method": "POST",
        "url": "/organizations",
        "description": "创建组织",
        "requestBody": {
          "name": "组织名称（必填）",
          "code": "组织编码（必填）",
          "type": "组织类型（必填）",
          "description": "组织描述",
          "parentId": "父组织ID",
          "managerId": "负责人ID",
          "address": "地址",
          "phone": "电话",
          "email": "邮箱",
          "website": "网站",
          "sort": "排序值"
        },
        "responseFields": "同getOrganizations的responseFields"
      },
      "updateOrganization": {
        "method": "PUT",
        "url": "/organizations/{id}",
        "description": "更新组织",
        "pathParams": {
          "id": "组织ID"
        },
        "requestBody": {
          "name": "组织名称",
          "code": "组织编码",
          "type": "组织类型",
          "status": "组织状态",
          "description": "组织描述",
          "managerId": "负责人ID",
          "address": "地址",
          "phone": "电话",
          "email": "邮箱",
          "website": "网站",
          "sort": "排序值"
        },
        "responseFields": "同getOrganizations的responseFields"
      },
      "deleteOrganization": {
        "method": "DELETE",
        "url": "/organizations/{id}",
        "description": "删除组织",
        "pathParams": {
          "id": "组织ID"
        },
        "responseFields": null
      },
      "batchDeleteOrganizations": {
        "method": "POST",
        "url": "/organizations/batch-delete",
        "description": "批量删除组织",
        "requestBody": {
          "ids": "组织ID数组"
        },
        "responseFields": null
      },
      "getOrganizationMembers": {
        "method": "GET",
        "url": "/organizations/{organizationId}/members",
        "description": "获取组织成员列表",
        "pathParams": {
          "organizationId": "组织ID"
        },
        "requestParams": {
          "role": "成员角色",
          "keyword": "搜索关键词"
        },
        "responseFields": {
          "id": "成员ID",
          "organizationId": "组织ID",
          "userId": "用户ID",
          "userName": "用户姓名",
          "userEmail": "用户邮箱",
          "userAvatar": "用户头像",
          "position": "职位",
          "role": "角色（manager/member）",
          "joinedAt": "加入时间"
        }
      },
      "addOrganizationMember": {
        "method": "POST",
        "url": "/organizations/{organizationId}/members",
        "description": "添加组织成员",
        "pathParams": {
          "organizationId": "组织ID"
        },
        "requestBody": {
          "userId": "用户ID（必填）",
          "position": "职位",
          "role": "角色（必填）"
        },
        "responseFields": "同getOrganizationMembers的responseFields"
      },
      "updateOrganizationMember": {
        "method": "PUT",
        "url": "/organizations/{organizationId}/members/{memberId}",
        "description": "更新组织成员",
        "pathParams": {
          "organizationId": "组织ID",
          "memberId": "成员ID"
        },
        "requestBody": {
          "position": "职位",
          "role": "角色"
        },
        "responseFields": "同getOrganizationMembers的responseFields"
      },
      "removeOrganizationMember": {
        "method": "DELETE",
        "url": "/organizations/{organizationId}/members/{memberId}",
        "description": "移除组织成员",
        "pathParams": {
          "organizationId": "组织ID",
          "memberId": "成员ID"
        },
        "responseFields": null
      },
      "moveOrganization": {
        "method": "PUT",
        "url": "/organizations/{id}/move",
        "description": "移动组织",
        "pathParams": {
          "id": "组织ID"
        },
        "requestBody": {
          "parentId": "新父组织ID"
        },
        "responseFields": "同getOrganizations的responseFields"
      },
      "getOrganizationStatistics": {
        "method": "GET",
        "url": "/organizations/statistics",
        "description": "获取组织统计数据",
        "requestParams": {
          "parentId": "父组织ID",
          "includeChildren": "是否包含子组织"
        },
        "responseFields": {
          "total": "总组织数量",
          "byType": "按类型统计",
          "byStatus": "按状态统计",
          "totalMembers": "总成员数量",
          "averageMembersPerOrg": "平均每个组织成员数",
          "maxLevel": "最大层级"
        }
      },
      "getUserOrganizations": {
        "method": "GET",
        "url": "/organizations/user/{userId}",
        "description": "获取用户所属组织",
        "pathParams": {
          "userId": "用户ID"
        },
        "responseFields": "同getOrganizations的responseFields"
      },
      "getOrganizationPath": {
        "method": "GET",
        "url": "/organizations/{id}/path",
        "description": "获取组织路径",
        "pathParams": {
          "id": "组织ID"
        },
        "responseFields": "组织路径数组，同getOrganizations的responseFields"
      },
      "getChildOrganizations": {
        "method": "GET",
        "url": "/organizations/{parentId}/children",
        "description": "获取子组织列表",
        "pathParams": {
          "parentId": "父组织ID"
        },
        "requestParams": {
          "recursive": "是否递归获取",
          "includeInactive": "是否包含禁用组织"
        },
        "responseFields": "同getOrganizations的responseFields"
      }
    },
    "dataTypes": {
      "OrganizationType": {
        "type": "enum",
        "values": ["company", "department", "team", "group"],
        "description": "组织类型枚举"
      },
      "OrganizationStatus": {
        "type": "enum",
        "values": ["active", "inactive"],
        "description": "组织状态枚举"
      },
      "MemberRole": {
        "type": "enum",
        "values": ["manager", "member"],
        "description": "成员角色枚举"
      }
    },
    "validationRules": {
      "organizationName": {
        "required": true,
        "minLength": 2,
        "maxLength": 50,
        "uniqueInSameLevel": true
      },
      "organizationCode": {
        "required": true,
        "minLength": 2,
        "maxLength": 20,
        "pattern": "^[A-Za-z0-9_-]+$",
        "globalUnique": true
      },
      "organizationType": {
        "required": true,
        "enum": ["company", "department", "team", "group"]
      },
      "organizationStatus": {
        "required": true,
        "enum": ["active", "inactive"]
      },
      "sort": {
        "required": true,
        "type": "number",
        "min": 0,
        "max": 999
      }
    }
  }
}