# 项目管理系统 - 环境变量配置示例
# =============================================================================
# 复制此文件为 .env 并根据实际环境修改配置值

# =============================================================================
# 应用基础配置
# =============================================================================
APP_NAME="项目管理系统"
APP_DESCRIPTION="一个功能完整的项目管理系统API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, production, testing
DEBUG=true
API_V1_STR="/api/v1"

# =============================================================================
# 服务器配置
# =============================================================================
SERVER_HOST="0.0.0.0"
SERVER_PORT=8000
SERVER_WORKERS=1
SERVE_STATIC_FILES=true
SERVE_UPLOAD_FILES=true

# =============================================================================
# 数据库配置
# =============================================================================
# PostgreSQL (推荐生产环境)
# DATABASE_URL="postgresql://username:password@localhost:5432/project_management"

# MySQL (备选)
# DATABASE_URL="mysql+pymysql://username:password@localhost:3306/project_management"

# SQLite (开发环境)
DATABASE_URL="sqlite:///./project_management.db"

# 数据库连接池配置
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# 数据库初始化
INIT_DB_ON_STARTUP=true
CREATE_ADMIN_USER=true
CREATE_SAMPLE_DATA=false

# =============================================================================
# Redis配置
# =============================================================================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# =============================================================================
# JWT配置
# =============================================================================
SECRET_KEY="your-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# 文件上传配置
# =============================================================================
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,zip,rar"
EXPORT_DIR="./exports"

# =============================================================================
# 分页配置
# =============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# 邮件配置 (可选)
# =============================================================================
# SMTP_TLS=true
# SMTP_PORT=587
# SMTP_HOST="smtp.example.com"
# SMTP_USER="your_email@example.com"
# SMTP_PASSWORD="your_email_password"
# EMAILS_FROM_EMAIL="your_email@example.com"
# EMAILS_FROM_NAME="Your App Name"

# =============================================================================
# CORS配置 (可选)
# =============================================================================
# BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000"

# =============================================================================
# Sentry配置 (可选)
# =============================================================================
# SENTRY_DSN="https://examplePublicKey@o0.ingest.sentry.io/0"

# =============================================================================
# 调试工具 (可选)
# =============================================================================
# PYCHARM_DEBUG=false
# PYCHARM_DEBUG_HOST="localhost"
# PYCHARM_DEBUG_PORT=12345

# 调试模式鉴权跳过 - 设置为true时将跳过所有接口鉴权检查
DEBUG_SKIP_AUTH=true